<div class="banner">
    <i id="burger" class="fas fa-bars"></i>
    <%= image_tag "logo.png", alt: "Sapio" %>
</div>
    <h1>Vos Pass</h1>

<div class="container">
  <% @act_bookings.each do |booking| %>
    <div class="card-text-pass delete-croix">
      <%= cl_image_tag booking.activity.photo_one %>
      <div class="card-text-infos">
        <h2><%= link_to booking.activity.name, activity_act_booking_path(booking.activity, booking) %></h2>
        <p><%= booking.activity.category %></p>
        <p>Date: <%= booking.date %></p>
      </div>

        <%= link_to act_booking_path(booking), method: :delete, class: "fa-times-delete" do %>
          <i class="fas fa-times"></i>
        <% end %>

    </div>
  <% end %>
  </div>
</div>
<div class="padding-bottom-page"></div>

