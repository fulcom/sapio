<div class="banner">
  <div class="text-in-banner">
    <h1>Que voulez-vous faire ?</h1>
    <div class="searchbar">
      <%= form_tag activities_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Que faire" %>
    </div>
    <div class="">
      <%= submit_tag "Chercher", class: "btn btn-flat-purple" %>
    </div>
      <% end %>
  </div>
</div>

<%= render 'list_activities', activities: @activities %>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>


