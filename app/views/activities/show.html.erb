<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag @activity.photo_one, class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag @activity.photo_two, class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag @activity.photo_three, class: "d-block w-100" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <h1 class="text-center"><%= @activity.name %></h1>
  <div class="d-flex">
    <div>
      <%= @activity.avg_rating %>
    </div>
    <div>
      <%= @activity.category %>
    </div>
  </div>
  <div class="text-center">
    <h2 class="text-center">Description de l'activité</h2>
    <%= @activity.description %>
  </div>
  <div>
    <h2 class="text-center">Infos Pratiques></h2>
    <%= @place.address %>
    <%= @activiy.access %>
  </div>
  <div class="text-center">
    <!-- METTRE UNE MODALE POUR LE BOUTON PASS POUR SELECTIONNER LA DATE -->

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal</button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Choisissez la date de votre réservation</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
          ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-flat-green" data-dismiss="modal">Annuler</button>
            <button type="button" class="btn btn-flat-purple">Générer un PASS</button>
          </div>
        </div>
      </div>
    </div>
    <!-- NAVBAR -->
  </div>
</div>
